{
  "compilerOptions": {
    "target": "es6",
    "outDir": "build",
    "baseUrl": "./",
    "paths": {
      "@pages¨/*": ["src/components/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/¨*": ["src/assets/*"]
    },
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "composite": true,
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ]
  },
   "include": [
      "src",
      "vite.config.ts",
      "package.json",
      "tsconfig.json",
      "postcss.config.js",
      "tailwind.config.js"
    ]
}